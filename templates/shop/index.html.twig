{% extends 'base.html.twig' %}

{% block title %}Boutiques{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="mt-3 mb-4">Boutiques</h1>
    <div class="row">
        {% for company in companies %}
            <div class="col-sm-4 py-2">
                <div class="card card-body h-100 bg-light">
                    <img src="https://i.pinimg.com/originals/98/25/c6/9825c68c47e3466463e0f95d1b6480e9.jpg" alt="{{company.name}}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{company.name}}</h5>
                        <p class="card-text">{{ company.presentation }}</p>
{#                        <p class="card-text">Avis client : {{ company.rate }}/5 </p>#}
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{path('company_detail',{id: company.id})}}" class="btn btn-secondary">Voir la boutique</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}
